<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>StudentListServlet</servlet-name>
        <servlet-class>ca.laurentian.servlet.StudentListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddServlet</servlet-name>
        <servlet-class>ca.laurentian.servlet.AddServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteServlet</servlet-name>
        <servlet-class>ca.laurentian.servlet.DeleteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateServlet</servlet-name>
        <servlet-class>ca.laurentian.servlet.UpdateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StoreUpdateInfoServlet</servlet-name>
        <servlet-class>ca.laurentian.servlet.StoreUpdateInfoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FilterSearchServlet</servlet-name>
        <servlet-class>ca.laurentian.servlet.FilterSearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentListPageServlet</servlet-name>
        <servlet-class>ca.laurentian.servlet.StudentListPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>StudentListServlet</servlet-name>
        <url-pattern>/StudentListServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddServlet</servlet-name>
        <url-pattern>/AddServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteServlet</servlet-name>
        <url-pattern>/DeleteServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateServlet</servlet-name>
        <url-pattern>/UpdateServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StoreUpdateInfoServlet</servlet-name>
        <url-pattern>/StoreUpdateInfoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FilterSearchServlet</servlet-name>
        <url-pattern>/FilterSearchServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentListPageServlet</servlet-name>
        <url-pattern>/StudentListPageServlet</url-pattern>
    </servlet-mapping>
</web-app>
